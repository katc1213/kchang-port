      <pattern id="hexagons" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
        <polygon points="10,1 18,5 18,13 10,17 2,13 2,5" stroke="rgba(77, 208, 225, 0.4)" fill="none" stroke-width="0.5"/>
