<style>
  :root {
    --navy-deep: #0d1a2d;
    --navy-mid: #152538;
    --navy-light: #1d3449;
    --blue-accent: #2a4a75;
    --cyan-glow: #4dd0e1;
    --gold-accent: #ffd700;
    --green-data: #00ff88;
  }

  .wallpaper-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: -1;
    overflow: hidden;
    background: linear-gradient(135deg, var(--navy-deep) 0%, var(--navy-mid) 50%, var(--navy-light) 100%);
  }

  /* Animated gradient overlay */
  .gradient-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(ellipse at 20% 30%, rgba(42, 74, 117, 0.3) 0%, transparent 50%),
      radial-gradient(ellipse at 80% 70%, rgba(77, 208, 225, 0.15) 0%, transparent 50%),
      radial-gradient(ellipse at 50% 50%, rgba(21, 37, 56, 0.9) 0%, transparent 70%);
    animation: gradientShift 15s ease-in-out infinite;
  }

  @keyframes gradientShift {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.8; transform: scale(1.1); }
  }

  /* Grid pattern */
  .grid-pattern {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(rgba(77, 208, 225, 0.015) 1px, transparent 1px),
      linear-gradient(90deg, rgba(77, 208, 225, 0.015) 1px, transparent 1px);
    background-size: 50px 50px;
    animation: gridMove 20s linear infinite;
  }

  @keyframes gridMove {
    0% { transform: translate(0, 0); }
    100% { transform: translate(50px, 50px); }
  }

  /* Circuit board lines */
  .circuit-lines {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .circuit-line {
    position: absolute;
    background: linear-gradient(90deg, transparent, var(--cyan-glow), transparent);
    opacity: 0.08;
    animation: circuitFlow 8s ease-in-out infinite;
  }

  .circuit-line:nth-child(1) {
    top: 20%;
    left: -100%;
    width: 40%;
    height: 2px;
    animation-delay: 0s;
  }

  .circuit-line:nth-child(2) {
    top: 45%;
    left: -100%;
    width: 60%;
    height: 2px;
    animation-delay: 2s;
  }

  .circuit-line:nth-child(3) {
    top: 70%;
    left: -100%;
    width: 50%;
    height: 2px;
    animation-delay: 4s;
  }

  .circuit-line:nth-child(4) {
    top: -100%;
    left: 30%;
    width: 2px;
    height: 40%;
    animation: circuitFlowVertical 10s ease-in-out infinite;
    animation-delay: 1s;
  }

  .circuit-line:nth-child(5) {
    top: -100%;
    left: 70%;
    width: 2px;
    height: 50%;
    animation: circuitFlowVertical 10s ease-in-out infinite;
    animation-delay: 3s;
  }

  @keyframes circuitFlow {
    0% { left: -100%; opacity: 0; }
    10% { opacity: 0.08; }
    90% { opacity: 0.08; }
    100% { left: 100%; opacity: 0; }
  }

  @keyframes circuitFlowVertical {
    0% { top: -100%; opacity: 0; }
    10% { opacity: 0.08; }
    90% { opacity: 0.08; }
    100% { top: 100%; opacity: 0; }
  }

  /* Financial chart lines */
  .chart-container {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 40%;
    opacity: 0.04;
  }

  .chart-line {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 100%;
  }

  .chart-path {
    stroke: var(--green-data);
    stroke-width: 2;
    fill: none;
    stroke-dasharray: 1000;
    stroke-dashoffset: 1000;
    animation: drawChart 8s ease-in-out infinite;
  }

  @keyframes drawChart {
    0% { stroke-dashoffset: 1000; }
    50% { stroke-dashoffset: 0; }
    100% { stroke-dashoffset: -1000; }
  }

  /* Hexagonal tech pattern */
  .hex-pattern {
    position: absolute;
    top: 10%;
    right: 5%;
    width: 300px;
    height: 300px;
    opacity: 0.03;
    animation: rotateHex 30s linear infinite;
  }

  @keyframes rotateHex {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  /* Code rain effect (Matrix-style) */
  .code-rain {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .code-column {
    position: absolute;
    top: -100%;
    font-family: 'JetBrains Mono', monospace;
    font-size: 14px;
    color: var(--green-data);
    opacity: 0.05;
    white-space: nowrap;
    animation: codeRain 15s linear infinite;
  }

  .code-column:nth-child(1) { left: 10%; animation-delay: 0s; }
  .code-column:nth-child(2) { left: 25%; animation-delay: 3s; font-size: 12px; }
  .code-column:nth-child(3) { left: 40%; animation-delay: 1.5s; }
  .code-column:nth-child(4) { left: 60%; animation-delay: 4s; font-size: 16px; }
  .code-column:nth-child(5) { left: 75%; animation-delay: 2s; }
  .code-column:nth-child(6) { left: 90%; animation-delay: 5s; font-size: 12px; }

  @keyframes codeRain {
    0% { top: -100%; opacity: 0; }
    10% { opacity: 0.05; }
    90% { opacity: 0.05; }
    100% { top: 100%; opacity: 0; }
  }

  /* Blockchain chain visualization */
  .blockchain {
    position: absolute;
    top: 15%;
    left: 10%;
    display: flex;
    gap: 30px;
    opacity: 0.04;
  }

  .block {
    width: 50px;
    height: 50px;
    background: rgba(77, 208, 225, 0.2);
    border: 2px solid var(--cyan-glow);
    position: relative;
    animation: blockPulse 3s ease-in-out infinite;
  }

  .block:not(:last-child)::after {
    content: '';
    position: absolute;
    right: -30px;
    top: 50%;
    width: 30px;
    height: 2px;
    background: var(--cyan-glow);
  }

  .block:nth-child(1) { animation-delay: 0s; }
  .block:nth-child(2) { animation-delay: 0.3s; }
  .block:nth-child(3) { animation-delay: 0.6s; }
  .block:nth-child(4) { animation-delay: 0.9s; }

  @keyframes blockPulse {
    0%, 100% { transform: scale(1); opacity: 0.6; }
    50% { transform: scale(1.1); opacity: 1; box-shadow: 0 0 20px var(--cyan-glow); }
  }

  /* Currency symbols floating */
  .currency-symbols {
    position: absolute;
    width: 100%;
    height: 100%;
    font-family: 'Orbitron', sans-serif;
    font-weight: 700;
    font-size: 80px;
    color: var(--cyan-glow);
    opacity: 0.015;
  }

  .symbol {
    position: absolute;
    animation: floatSymbol 20s ease-in-out infinite;
  }

  .symbol:nth-child(1) { left: 20%; top: 30%; animation-delay: 0s; }
  .symbol:nth-child(2) { left: 70%; top: 20%; animation-delay: 4s; font-size: 60px; }
  .symbol:nth-child(3) { left: 50%; top: 60%; animation-delay: 8s; font-size: 70px; }

  @keyframes floatSymbol {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    25% { transform: translate(30px, -30px) rotate(5deg); }
    50% { transform: translate(-20px, 20px) rotate(-5deg); }
    75% { transform: translate(20px, 30px) rotate(3deg); }
  }

  /* Digital numbers ticker */
  .ticker {
    position: absolute;
    bottom: 10%;
    right: 5%;
    font-family: 'JetBrains Mono', monospace;
    font-size: 24px;
    color: var(--green-data);
    opacity: 0.06;
    animation: tickerBlink 2s ease-in-out infinite;
  }

  @keyframes tickerBlink {
    0%, 100% { opacity: 0.06; }
    50% { opacity: 0.1; }
  }

  /* Noise texture overlay */
  .noise {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    opacity: 0.015;
    pointer-events: none;
  }
</style>