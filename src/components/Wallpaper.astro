---
// Wallpaper.astro - Animated FinTech Background Component
---

<div class="wallpaper-container">
  <div class="gradient-overlay"></div>
  <div class="grid-pattern"></div>
  <div class="noise"></div>
  
  <div class="circuit-lines">
    <div class="circuit-line"></div>
    <div class="circuit-line"></div>
    <div class="circuit-line"></div>
    <div class="circuit-line"></div>
    <div class="circuit-line"></div>
  </div>

  <div class="chart-container">
    <svg class="chart-line" viewBox="0 0 1000 200" preserveAspectRatio="none">
      <path class="chart-path" d="M0,150 Q100,120 200,130 T400,110 T600,140 T800,100 T1000,120" />
    </svg>
  </div>


  <div class="blockchain">
    <div class="block"></div>
    <div class="block"></div>
    <div class="block"></div>
    <div class="block"></div>
  </div>

  <div class="currency-symbols">
    <div class="symbol">$</div>
    <div class="symbol">€</div>
    <div class="symbol">₿</div>
  </div>

  <svg class="hex-pattern" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
    <defs>
      <pattern id="hexagons" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
        <polygon points="10,1 18,5 18,13 10,17 2,13 2,5" stroke="rgba(212, 175, 55, 0.3)" fill="none" stroke-width="0.5"/>
      </pattern>
    </defs>
    <rect width="100" height="100" fill="url(#hexagons)" />
  </svg>

  <div class="ticker">
    CMPE 100 | KYC +4.0% | GT 2026
  </div>
</div>

<style>
  :root {
    --green-deep: #031407;
    --green-mid: #072007;
    --green-light: #142214;
    --gray-accent: #3a3f4a;
    --gold-accent: #d4af37;
    --green-data: #0a2b1a;
    --red-data: #ff4757;
    --blue-data: #5b9bd5;
  }

  .wallpaper-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: -1;
    overflow: hidden;
    background: linear-gradient(135deg, var(--green-deep) 0%, var(--green-mid) 50%, var(--green-light) 100%);
  }

  /* Animated gradient overlay */
  /*.gradient-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(ellipse at 20% 30%, rgba(212, 175, 55, 0.08) 0%, transparent 50%),
      radial-gradient(ellipse at 80% 70%, rgba(91, 155, 213, 0.06) 0%, transparent 50%),
      radial-gradient(ellipse at 50% 50%, rgba(35, 39, 47, 0.9) 0%, transparent 70%);
    animation: gradientShift 15s ease-in-out infinite;
  }*/

  @keyframes gradientShift {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.8; transform: scale(1.1); }
  }

  /* Grid pattern */
  .grid-pattern {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(rgba(212, 175, 55, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(212, 175, 55, 0.02) 1px, transparent 1px);
    background-size: 50px 50px;
    animation: gridMove 20s linear infinite;
  }

  @keyframes gridMove {
    0% { transform: translate(0, 0); }
    100% { transform: translate(50px, 50px); }
  }

  .circuit-lines {
    position: absolute;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .circuit-line {
    position: absolute;
    background: linear-gradient(90deg, transparent, var(--gold-accent), transparent);
    opacity: 0.1;
    animation: circuitFlow 8s ease-in-out infinite;
  }

  .circuit-line:nth-child(1) {
    top: 20%;
    left: -100%;
    width: 40%;
    height: 2px;
    animation-delay: 0s;
  }

  .circuit-line:nth-child(2) {
    top: 45%;
    left: -100%;
    width: 60%;
    height: 2px;
    animation-delay: 2s;
  }

  .circuit-line:nth-child(3) {
    top: 70%;
    left: -100%;
    width: 50%;
    height: 2px;
    animation-delay: 4s;
  }

  .circuit-line:nth-child(4) {
    top: -100%;
    left: 30%;
    width: 2px;
    height: 40%;
    animation: circuitFlowVertical 10s ease-in-out infinite;
    animation-delay: 1s;
  }

  .circuit-line:nth-child(5) {
    top: -100%;
    left: 70%;
    width: 2px;
    height: 50%;
    animation: circuitFlowVertical 10s ease-in-out infinite;
    animation-delay: 3s;
  }

  @keyframes circuitFlow {
    0% { left: -100%; opacity: 0; }
    10% { opacity: 0.1; }
    90% { opacity: 0.1; }
    100% { left: 100%; opacity: 0; }
  }

  @keyframes circuitFlowVertical {
    0% { top: -100%; opacity: 0; }
    10% { opacity: 0.1; }
    90% { opacity: 0.1; }
    100% { top: 100%; opacity: 0; }
  }

// chart line
  .chart-container {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 40%;
    opacity: 0.048;
  }

  .chart-line {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 100%;
  }

  .chart-path {
    stroke: var(--green-data);
    stroke-width: 2;
    fill: none;
    stroke-dasharray: 1000;
    stroke-dashoffset: 1000;
    animation: drawChart 8s ease-in-out infinite;
  }

  @keyframes drawChart {
    0% { stroke-dashoffset: 1000; }
    50% { stroke-dashoffset: 0; }
    100% { stroke-dashoffset: -1000; }
  }

  /* Hexagonal tech pattern */
  .hex-pattern {
    position: absolute;
    top: 10%;
    right: 5%;
    width: 300px;
    height: 300px;
    opacity: 0.036;
    animation: rotateHex 30s linear infinite;
  }

  @keyframes rotateHex {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  /* Blockchain chain visualization */
  .blockchain {
    position: absolute;
    top: 15%;
    left: 10%;
    display: flex;
    gap: 30px;
    opacity: 0.05;
  }

  .block {
    width: 50px;
    height: 50px;
    background: rgba(212, 175, 55, 0.1);
    border: 2px solid var(--gold-accent);
    position: relative;
    animation: blockPulse 3s ease-in-out infinite;
  }

  .block:not(:last-child)::after {
    content: '';
    position: absolute;
    right: -30px;
    top: 50%;
    width: 30px;
    height: 2px;
    background: var(--gold-accent);
  }

  .block:nth-child(1) { animation-delay: 0s; }
  .block:nth-child(2) { animation-delay: 0.3s; }
  .block:nth-child(3) { animation-delay: 0.6s; }
  .block:nth-child(4) { animation-delay: 0.9s; }

  @keyframes blockPulse {
    0%, 100% { transform: scale(1); opacity: 0.6; }
    50% { transform: scale(1.1); opacity: 1; box-shadow: 0 0 20px var(--gold-accent); }
  }

  /* Currency symbols floating */
  .currency-symbols {
    position: absolute;
    width: 100%;
    height: 100%;
    font-family: 'Orbitron', sans-serif;
    font-weight: 700;
    font-size: 80px;
    color: var(--gold-accent);
    opacity: 0.018;
  }

  .symbol {
    position: absolute;
    animation: floatSymbol 20s ease-in-out infinite;
  }

  .symbol:nth-child(1) { left: 20%; top: 30%; animation-delay: 0s; }
  .symbol:nth-child(2) { left: 70%; top: 20%; animation-delay: 4s; font-size: 60px; }
  .symbol:nth-child(3) { left: 50%; top: 60%; animation-delay: 8s; font-size: 70px; }

  @keyframes floatSymbol {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    25% { transform: translate(30px, -30px) rotate(5deg); }
    50% { transform: translate(-20px, 20px) rotate(-5deg); }
    75% { transform: translate(20px, 30px) rotate(3deg); }
  }

  /* Digital numbers ticker */
  .ticker {
    position: absolute;
    bottom: 10%;
    right: 5%;
    font-family: 'JetBrains Mono', monospace;
    font-size: 24px;
    color: var(--green-data);
    opacity: 0.072;
    animation: tickerBlink 2s ease-in-out infinite;
  }

  @keyframes tickerBlink {
    0%, 100% { opacity: 0.072; }
    50% { opacity: 0.12; }
  }

  /* Noise texture overlay */
  .noise {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    opacity: 0.018;
    pointer-events: none;
  }
</style>