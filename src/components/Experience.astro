---
import Section from "./Section.astro";
import type { ExperienceProps } from "@types";

interface Props {
  experience: ExperienceProps[];
}

const { experience } = Astro.props;
---

<Section text="Work Experience" href="experience">
  {
    experience.map(({ company, position, startDate, endDate, summary }, index) => (
      <div class="mb-6 rounded-xl border border-neutral/20 bg-[#1c232d]/50 overflow-hidden transition-all">
        <button
          class="experience-toggle w-full text-left px-6 py-5 hover:bg-white/5 transition-colors"
          data-index={index}
          aria-expanded="false"
        >
          <div class="flex items-start justify-between gap-4">
            <div class="flex-1">
              <h3 class="mb-1.5 font-serif text-2xl font-semibold text-white">
                {company}
              </h3>
              <h4 class="mb-0.5 font-serif text-xl font-medium text-primary">
                {position}
              </h4>
              <span class="text-sm text-white/70">
                {startDate} â€” {endDate}
              </span>
            </div>
            <div class="flex-shrink-0">
              <svg
                class="chevron w-6 h-6 text-primary transition-transform duration-300"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </div>
          </div>
        </button>
        
        <div
          class="experience-content max-h-0 overflow-hidden transition-all duration-300 ease-in-out"
          data-content-index={index}
        >
          <div class="px-6 pb-5 pt-2">
            {Array.isArray(summary) ? (
              <ul class="list-none space-y-3">
                {summary.map((log) => (
                  <li class="relative pl-8 text-base text-neutral before:absolute before:top-1 before:left-0 before:content-[url(/check.svg)]">
                    {log}
                  </li>
                ))}
              </ul>
            ) : (
              <p class="text-base text-neutral">{summary}</p>
            )}
          </div>
        </div>
      </div>
    ))
  }
</Section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButtons = document.querySelectorAll('.experience-toggle');
    
    toggleButtons.forEach((button) => {
      button.addEventListener('click', () => {
        const index = button.getAttribute('data-index');
        const content = document.querySelector(`[data-content-index="${index}"]`) as HTMLElement;
        const chevron = button.querySelector('.chevron') as HTMLElement;
        const isExpanded = button.getAttribute('aria-expanded') === 'true';
        
        if (content && chevron) {
          if (isExpanded) {
            // Collapse
            content.style.maxHeight = '0px';
            chevron.style.transform = 'rotate(0deg)';
            button.setAttribute('aria-expanded', 'false');
          } else {
            // Expand
            content.style.maxHeight = content.scrollHeight + 'px';
            chevron.style.transform = 'rotate(180deg)';
            button.setAttribute('aria-expanded', 'true');
          }
        }
      });
    });
  });
</script>

<style>
  .experience-content {
    transition: max-height 0.3s ease-in-out;
  }
</style>